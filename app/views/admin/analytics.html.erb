<%= render partial: 'navigation' %>
<div class="container">
  <div class="row">
    <h1>Analytics Oversigt</h1>
  </div>
<div class="row">
  <div class="col-md-6">
    <h3>Visits by site area</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Action</th><th>Absolute</th><th>Percentage</th>
        </tr>
      </thead>
      <% @grouped_action.each do |action, values|  %>
        <tr>
          <td><%= action %></td>
          <td><%= values.first %></td>
          <td><%= "#{values.second.round(2)}%" %></td>
        </tr>
      <% end  %>
    </table>
  </div>
</div>

</div>
